<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

        <!--SignIn-->
    <servlet>
        <servlet-name>SignInServlet</servlet-name>
        <servlet-class>com.workfront.intern.cb.web.servlets.SignInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignInServlet</servlet-name>
        <url-pattern>/sign-in</url-pattern>
    </servlet-mapping>

    <!--LogInServlet-->
    <servlet>
        <servlet-name>LogInServlet</servlet-name>
        <servlet-class>com.workfront.intern.cb.web.servlets.LogInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogInServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--LogOutServlet-->
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>com.workfront.intern.cb.web.servlets.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!--SearchTournamentsByNameServlet-->
    <servlet>
        <servlet-name>TournamentSearchServlet</servlet-name>
        <servlet-class>com.workfront.intern.cb.web.servlets.tournament.SearchTournamentsByNameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TournamentSearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <!--AddTournamentServlet-->
    <servlet>
        <servlet-name>AddTournamentServlet</servlet-name>
        <servlet-class>com.workfront.intern.cb.web.servlets.tournament.AddTournamentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddTournamentServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>



    <!--Errors handling-->
    <!--<error-page>-->
        <!--<exception-type>java.lang.Throwable</exception-type>-->
        <!--<location>/error.jsp</location>-->
    <!--</error-page>-->
    <!--<error-page>-->
        <!--<error-code>401</error-code>-->
        <!--<location>/error401.jsp</location>-->
    <!--</error-page>-->
    <error-page>
        <error-code>404</error-code>
        <location>/error404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/log-in.jsp</location>
    </error-page>
</web-app>